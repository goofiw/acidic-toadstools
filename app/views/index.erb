<!-- Intro Section -->
<section id="intro" class="intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Office Fooooos</h1>
                <h4>Take a Break. Play Fooseball. </h4>
                <% if session[:username] %>
                  <% if session[:office_name] %>
                    <a class="btn btn-success btn-lg page-scroll" href="/play">Play Foo at <%= session[:office_name] %> <%= session[:company_name] %></a>
                  <% else %>
                    <div class="dropdown">
                      <button class="btn btn-success btn-lg dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                        Select Office
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                        <% all_user_offices.each do |office|  %>
                          <li> <a role="menuitem" tabindex="-1" href="office/<%= office.id %>"><%= office.name %> <%= office.company_name %></a>
                          <br> </li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                <% else %>
                  <a class="btn btn-success btn-lg page-scroll" href="#offices">View Offices</a>
                <% end %>

            </div>
        </div>
    </div>
</section>

<!-- Offices Section -->
<section id="offices" class="offices-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Offices Section</h1>
                <% if all_offices.length > 0 %>
                  <% all_offices.each do |office|  %>
                    <a href="office/<%= office.id %>"><%= office.name %> <%= office.company_name %></a>
                    <br>
                  <% end %>
                <% end %>

                <% if session[:username] %>
                  <br>
                  Current Office:
                  <%= session[:office_name] %> <%= session[:company_name] %>
                <% end %>
            </div>
        </div>
    </div>
</section>


