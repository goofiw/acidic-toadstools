	<!-- Display error messages -->
<% if @errors %>
  <div class="alert alert-danger">
    <strong>Username or password is not correct</strong>
  </div>
<% end %>

<form method="post" action="/signin" class="form-inline">
  <div class="form-group">

  <div>
    
    <div class="form-group">
	    <label>Username:</label>
	    <input type="text" name="username" value="<%= @user && @user.username %>" class="form-control">  
    </div>
	  <div class="form-group">
	    <label>Password:</label>
	    <input type="text" name="password"  class="form-control">
	  </div>

  </div>

    <input type="submit" value="Submit" class="btn-default">

</form>